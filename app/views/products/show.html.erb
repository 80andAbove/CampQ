<div class="product-page">
  <nav class="flex-nav">
  <div class="product-container">
    <div class="grid menu">
      <div class="column-xs-8 column-md-6">
       <!-- <p id="highlight"> <%= link_to "CampQ", root_path %></p> -->
      </div>
      <div class="column-xs-4 column-md-6">
        <a href="#" class="toggle-nav">Menu <i class="ion-navicon-round"></i></a>
        <ul>
          <li class="nav-item"><a href="/products">Products</a></li>
          <li class="nav-item"><a href="/">About</a></li>
          <li class="nav-item"><a href="/profile">My rentals</a></li>
          <li class="nav-item"><a href="#">Cart (0)</a></li>
        </ul>
      </div>
    </div>
  </div>
  </nav>
  <main>
    <div class="product-container">
      <div class="grid second-nav">
        <div class="column-xs-12">
          <nav>
            <ol class="breadcrumb-list">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="#"> <%= @product.category %></a></li>
              <li class="breadcrumb-item active"> <%= @product.name %></li>
            </ol>
          </nav>
        </div>
      </div>
      <div class="grid product d-flex">
        <div class="column-xs-12 column-md-7">
          <div class="product-gallery">
            <div class="product-image">
              <%= cl_image_tag @product.photos[0].key, class: "active" %>
            </div>
            <ul class="image-list">
              <li class="image-item"><%= cl_image_tag @product.photos[0].key, width: 100 %></li>
              <li class="image-item"><%= cl_image_tag @product.photos[1].key, width: 100 %></li>
              <li class="image-item"><%= cl_image_tag @product.photos[2].key, width: 100 %></li>
            </ul>
  
          </div>
        </div>
        <div class="column-xs-12 column-md-5">
          <h1><%= @product.name %></h1>
          <h2>¥ <%= @product.price %></h2>
          <div class="description">
            <p> <%= @product.description %></p>
          </div>
          <%= link_to(new_product_booking_path(@product)) do %>
            <% if @product.user != current_user %>
               <button class="add-to-cart">Reserve this item</button>
            <% end %>
            <% end %>
        </div>
      </div>
      <div class="related-products py-3">
        <div class="column-xs-12">
          <h3>You may also like</h3>
        </div>
        <div class="d-flex justify-content-between p-2">
            <% @random_product.each do |random_product| %>
            <%= link_to(product_path(random_product)) do %>
             <div class="recommended-item column-xs-12 column-md-4 mx-1">
                 <%= cl_image_tag random_product.photos[1].key, style: "height: 320px; width: 480px; object-fit: contain;" %>
                 <h4><%= random_product.name %></h4>
                 <p class="price">¥ <%= random_product.price %></p>
             </div>
           <% end %>
           <% end %>
           </div>
        </div>
      </div>
  </main>
</div>

