<h1>Product Page</h1>
<%= link_to product_path(@product),
        method: :delete,
        data: { confirm: "Are you sure?" }, class: "btn btn-warning"%>

<%= link_to 'Products', products_path, class: "btn btn-primary" %>
<nav class="flex-nav">
  <div class="container">
    <div class="grid menu">
      <div class="column-xs-8 column-md-6">
       <p id="highlight"> <%= link_to "CampQ", root_path %></p>
      </div>
      <div class="column-xs-4 column-md-6">
        <a href="#" class="toggle-nav">Menu <i class="ion-navicon-round"></i></a>
        <ul>
          <li class="nav-item"><a href="/products">Products</a></li>
          <li class="nav-item"><a href="/">About</a></li>
          <li class="nav-item"><a href="/profile">My rentals</a></li>
          <li class="nav-item"><a href="#">Cart (0)</a></li>
        </ul>
      </div>
    </div>
  </div>
</nav>
<main>
  <div class="container">
    <div class="grid second-nav">
      <div class="column-xs-12">
        <nav>
          <ol class="breadcrumb-list">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="#"> <%= @product.category %></a></li>
            <li class="breadcrumb-item active"> <%= @product.name %></li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="grid product d-flex">
      <div class="column-xs-12 column-md-7">
        <div class="product-gallery">
          <div class="product-image">
            <img class="active" src=" <%= @product.picture %>">
          </div>
          <ul class="image-list">
            <li class="image-item"><img src="<%= @product.picture %>"></li>
            <li class="image-item"><img src="<%= @product.picture %>"></li>
            <li class="image-item"><img src="<%= @product.picture %>"></li>
          </ul>
        </div>
      </div>
      <div class="column-xs-12 column-md-5">
        <h1><%= @product.name %></h1>
        <h2>짜 <%= @product.price %></h2>
        <div class="description">
          <p> <%= @product.description %></p>
        </div>
        <%= link_to(new_product_booking_path(@product)) do %>
          <button class="add-to-cart">Add To Cart</button>
          <% end %>
      </div>
    </div>
    <div class="grid related-products py-3">
      <div class="column-xs-12">
        <h3>You may also like</h3>
      </div>
      <div class="row">
        <div class="col-4">
      <%= link_to(product_path(@product)) do %>
        <img src="<%= Product.where.not(id: params[:id]).first.picture %>">
        <h4><%= Product.where.not(id: params[:id]).first.name %></h4>
        <p class="price">짜 <%= Product.where.not(id: params[:id]).first.price %></p>
      <% end %>
      </div>
      <div class="col-4">
      <%= link_to(product_path(@product)) do %>
        <img src="<%= Product.where.not(id: params[:id]).last.picture %>">
        <h4> <%= Product.where.not(id: params[:id]).last.name %></h4>
        <p class="price">짜 <%= Product.where.not(id: params[:id]).first.price %></p>
      <% end %>
      </div>
      <div class="col-4">
        <%= link_to(product_path(@product)) do %>
        <img src="<%= Product.where.not(id: params[:id]).first.picture %>">
        <h4><%= Product.where.not(id: params[:id]).first.name %></h4>
        <p class="price">짜 <%= Product.where.not(id: params[:id]).first.price %></p>
      <% end %>
      </div>
      </div>
    </div>
  </div>
</main>
<div class="container p-3">
  <h1> <%= @product.name %></h1>
  <div class="product-card d-flex justify-content-between">
    <img src=" <%= @product.picture %>"/>
      <div class="product-info p-3">
      <p><strong>About</strong></p>
      <p> <%= @product.description %><p>
      <p><strong>Price</strong></p>
      <p> <%= @product.price %>$<p>
      <div class="btn btn-primary">Rent</div>
      </div>
   </div>
</div>
