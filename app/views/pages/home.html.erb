        <div class="banner">
            <h1>CampQ</h1>
            <h3>Camping Gear Anywhere and Everywhere</h3>
                <%= simple_form_for :search, url: products_path, method: "GET", html: { class: 'form-inline' } do |f| %>
                    <%= f.input :name, input_html: {value: ""} %>   
