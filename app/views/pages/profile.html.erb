 <div class="container py-3">
    <ul class="nav tabs-underlined" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="active tab-underlined" id="home-tab" data-toggle="tab" href="#bookings" role="tab" aria-controls="home" aria-selected="true">Requested gear</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="tab-underlined" id="profile-tab" data-toggle="tab" href="#requests" role="tab" aria-controls="profile" aria-selected="false">Gear rentals</a>
      </li>
       <li class="nav-item" role="presentation">
        <a class="tab-underlined" id="list-tab" data-toggle="tab" href="#lists" role="tab" aria-controls="profile" aria-selected="false">My gear</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade py-3 show active" id="bookings" role="tabpanel" aria-labelledby="home-tab">
        <h1 class="m-3">Requested Gear</h1>

        <%= render 'gear_card', bookings: @bookings %>

      </div>
      <div class="tab-pane fade py-3" id="requests" role="tabpanel" aria-labelledby="profile-tab">
        <h1 class="m-3">Gear rentals</h1>

        <%= render 'gear_card', bookings: @rental_bookings %>
      </div>
      <div class="tab-pane fade py-3" id="lists" role="tabpanel" aria-labelledby="list-tab">
        <h1 class="m-3">My gear</h1>

        <h2 class="m-3">Products coming soon...</h2>

      </div>
    </div>

 <h1>Bookings calendar</h1>

    <div>
     <%= month_calendar(events: @bookings+@rental_bookings, attribute: :start_time, end_attribute: :end_time) do |date, bookings| %>
                <%= date %>
                <% bookings.each do |booking| %>
                  <div class="booking-profile-calendar">
                    <p><%= booking.product.name %></p>
                  </div>
                <% end %>
              <% end %>
    </div>
  </div>





 </div>



